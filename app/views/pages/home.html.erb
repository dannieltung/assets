<%= simple_form_for [Asset.new] do |f| %>
  <%= f.input :trade, as: :date, html5: true, label: 'Pregão' %>
  <%= f.input :operation, label: 'C / V' %>
  <%= f.input :name, label: 'Ativo' %>
  <%= f.input :quantity, label: 'Quantidade' %>
  <%= f.input :price, label: 'Preço' %>
  <%= f.input :emoluments, label: 'Emolumentos' %>
  <%= f.submit "File It", class: 'btn btn-success btn-lg' %>
<% end %>
<br>
<% @assets.each do |asset| %>
  <p>
    <%= asset.trade.strftime('%d-%m-%Y') %>
    <%= asset.operation.upcase %>
    <%= asset.name.upcase %>
    <%= asset.quantity %>
    <%= asset.price %>
    <%= asset.emoluments %>
    <%= (((asset.quantity * asset.price) + asset.emoluments) / asset.quantity) * asset.quantity %>
    <%= ((asset.quantity * asset.price) + asset.emoluments) / asset.quantity %>
    <%= link_to "Delete", asset_path(asset), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
  </p>
<% end %>